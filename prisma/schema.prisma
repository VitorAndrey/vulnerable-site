generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model products {
  id                 String @id @default(uuid())
  name               String
  basePrice          Float
  imageUrl           String
  discountPercentage Int?
  cashBackPercentage Int?
}

model users {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
}
